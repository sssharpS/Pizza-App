<section class="status">
    <div class="container mx-auto">
       <div class="status-box container mx-auto w-full lg:w-2/3">
          <div class="flex items-center justify-between mb-12">
            <h1 class="font-bold text-lg">Track Delivery Status</h1>
            <h6 class="bg-white rounded-full py-1 px-4 text-green-600"><%= order._id %></h6>
            <input id='hiddenInput' type="hidden" value="<%= JSON.stringify(order) %>">
          </div>
          <ul>
            <li class="status_line pb-16 text-sm md:text-xl" data-status='order_placed'><span>Order Placed</span></li>
            <li class="status_line pb-16 text-sm md:text-xl" data-status="confirmed"><span>Order Confirmation</span></li>
            <li class="status_line pb-16 text-sm md:text-xl" data-status="prepared"><span>Prepration</span></li>
            <li class="status_line pb-16 text-sm md:text-xl" data-status="delivered"><span>Out for Delivery</span></li>
            <li class="status_line text-sm md:text-xl" data-status="completed"><span>Complete</span></li>
            
          </ul>
       </div>
    </div>
</section>